<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/picture_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nome do Usuário"
            android:textColor="#5A5A5A"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/txtBio"
            android:layout_width="316dp"
            android:layout_height="71dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Descrição do Perfil do Usuário, aqui ele pode colocar informações que ele pode achar interessantes para chamar atenção de algum outro usuário."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userName" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardvPerfilImage2"
            android:layout_width="110dp"
            android:layout_height="220dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtBio">

            <ImageView
                android:id="@+id/imagePerfilEdit2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardvPerfilImage1"
            android:layout_width="110dp"
            android:layout_height="220dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintEnd_toStartOf="@+id/cardvPerfilImage2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtBio">

            <ImageView
                android:id="@+id/imagePerfilEdit1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardvPerfilImage3"
            android:layout_width="110dp"
            android:layout_height="220dp"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardvPerfilImage2"
            app:layout_constraintTop_toBottomOf="@+id/txtBio">

            <ImageView
                android:id="@+id/imagePerfilEdit3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttoneditarp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="292dp"
            android:background="@drawable/ic_edit"
            android:backgroundTint="@color/verdeclaro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtBio" />

        <Button
            android:id="@+id/buttonconfig"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="292dp"
            android:background="@drawable/ic_config"
            android:backgroundTint="@color/verdeclaro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.608"
            app:layout_constraintStart_toEndOf="@+id/buttoneditarp"
            app:layout_constraintTop_toBottomOf="@+id/txtBio" />

        <Button
            android:id="@+id/buttoninfo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="292dp"
            android:background="@drawable/ic_info"
            android:backgroundTint="@color/verdeclaro"
            app:layout_constraintEnd_toStartOf="@+id/buttoneditarp"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtBio" />

        <TextView
            android:id="@+id/texteditp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Editar Perfil"
            android:textColor="@color/preto"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttoneditarp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="Infomações"
            android:textColor="@color/preto"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/texteditp"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttoninfo" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Configurações"
            android:textColor="@color/preto"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.569"
            app:layout_constraintStart_toEndOf="@+id/texteditp"
            app:layout_constraintTop_toBottomOf="@+id/buttonconfig" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>